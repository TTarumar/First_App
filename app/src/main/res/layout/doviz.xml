<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doviz"
    android:orientation="vertical"
    android:background="#292826"
    >
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btndekil"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Foreks"
        android:textSize="30dp"
        android:textColor="#292826"
        android:id="@+id/foreks"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btndekil"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Bloomberght"
        android:textSize="30dp"
        android:textColor="#292826"
        android:id="@+id/bloom"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btndekil"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="İşbank"
        android:textSize="30dp"
        android:textColor="#292826"
        android:id="@+id/isbank"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btndekil"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Akbank"
        android:textSize="30dp"
        android:textColor="#292826"
        android:id="@+id/akbank"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btndekil"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="YapıKredi"
        android:textSize="30dp"
        android:textColor="#292826"
        android:id="@+id/yapikredi"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btndekil"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="ptt"
        android:textSize="30dp"
        android:textColor="#292826"
        android:id="@+id/ptt"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btndekil"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:text="CanlıDöviz"
        android:textSize="30dp"
        android:textColor="#292826"
        android:id="@+id/canli"
        />
</LinearLayout>