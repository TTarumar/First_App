<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292826"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:background="#292826"
        android:textColor="#ffff"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:gravity="end"
        android:textSize="30dp"
        android:layout_weight="1"
        android:id="@+id/girilen"
        android:maxLength="18"
        android:inputType="none"
        />

    <TextView
        android:gravity="end"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#292826"
        android:textSize="35dp"
        android:textColor="#fff"
        android:id="@+id/sonuc"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#292826"
        android:orientation="vertical"
        android:layout_marginTop="7dp"
        >

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ce"
                android:layout_width="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:textColor="#292826"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/renl"
                android:text="+/-"
                android:textSize="40dp" />

            <Button
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#292826"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/renl"
                android:text="ce"
                android:textSize="40dp" />

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#292826"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/renl"
                android:text="Del"
                android:textSize="38dp" />

            <Button
                android:id="@+id/bol"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#292826"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/renl"
                android:text="/"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#292826"
                android:text="7"
                android:textSize="40dp"
                android:id="@+id/bnt7"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#292826"
                android:text="8"
                android:textSize="40dp"
                android:id="@+id/bnt8"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#292826"
                android:text="9"
                android:textSize="40dp"
                android:id="@+id/bnt9"
                />

            <Button
                android:id="@+id/carp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#292826"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/renl"
                android:text="x"
                android:textSize="40dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#292826"
                android:text="4"
                android:textSize="40dp"
                android:id="@+id/bnt4"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#292826"
                android:text="5"
                android:textSize="40dp"
                android:id="@+id/bnt5"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#292826"
                android:text="6"
                android:textSize="40dp"
                android:id="@+id/bnt6"
                />

            <Button
                android:id="@+id/cikar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#292826"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/renl"
                android:text="-"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#292826"
                android:text="1"
                android:textSize="40dp"
                android:id="@+id/bnt1"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#292826"
                android:text="2"
                android:textSize="40dp"
                android:id="@+id/bnt2"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#292826"
                android:text="3"
                android:textSize="40dp"
                android:id="@+id/bnt3"
                />

            <Button
                android:id="@+id/topla"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#292826"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/renl"
                android:text="+"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#292826"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/renl"
                android:text="00"
                android:textSize="40dp"
                android:id="@+id/bnt00"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#292826"
                android:text="0"
                android:textSize="40dp"
                android:id="@+id/bnt0"
                />

            <Button
                android:id="@+id/virgul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#292826"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/renl"
                android:text=","
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/esittir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#292826"
                android:layout_weight="1"
                android:background="@drawable/renl"
                android:text="="
                android:textSize="40dp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>