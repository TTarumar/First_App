<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kronometre"
    android:gravity="center"
    android:background="#292826"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="00.00.00"

        android:textColor="#FF462C"
        android:textSize="50dp"
        android:id="@+id/kronometre"
        />
    <Button
        android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/btndekil"
        android:text="BaÅŸlat"
        android:textColor="#292826"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/btnstart"

        />

    <Button
        android:id="@+id/btnpause"
        android:drawableLeft="@drawable/ic_pause_black_24dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/btndekil"
        android:text="durdur"
        android:textColor="#292826"
        android:textSize="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"

        />
    <Button
        android:drawableLeft="@drawable/ic_loop_black_24dp"
        android:id="@+id/btnlaps"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/btndekil"
        android:text="tur"
        android:textColor="#292826"
        android:textSize="20dp"
        android:layout_marginTop="2dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/laps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                ></LinearLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>